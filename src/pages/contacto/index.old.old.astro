---
import Layout from '@/layouts/Layout.astro'
import { ContactoCarruselReact } from '@/components/ContactoCarruselReact.jsx'
import TextoAnimadoTelefono from '@/components/botones-sliders/TextoAnimadoTelefono.astro'
import Logo from '@/components/icons/LogoMaps.astro'
---

<Layout title='Contactos de la Auxiliar'>
	<div class='contacto rounded-lg flex flex-col h-full items-center w-full'>
		<div
			class='numero text-white font-bold text-2xl flex flex-col justify-center items-center w-full p-4 mb-8'
		>
			<section class='flex pr-4'>
				<h3 class='contacta pr-4'>Llámanos al teléfono:</h3>
				<span class=''>
					<TextoAnimadoTelefono />
				</span>
			</section>
			<section class='flex items-center'>
				<span class=''> Encuéntranos en el mapa:</span>
				<a
					class='spin p-4 blend text-blue-500 mix-blend-multiply'
					target='_blank'
					href='https://maps.app.goo.gl/QZcyPLooNu41XfmS6'
				>
					<Logo
						style='width:44px'
						fill='fill:currentColor;'
					/>
				</a>
			</section>
			<span class=''> Contacta con el departamento que necesites:</span>
		</div>

		<!-- CARRUSEL===================================== -->
		<ContactoCarruselReact client:load />
	</div>
</Layout>

<style>
	@keyframes spin {
		0% {
			transform: rotateY(0deg);
		}
		100% {
			transform: rotateY(1turn);
		}
	}

	.spin {
		animation: spin 6s linear infinite;
	}
	:global(.light) .numero {
		color: rgb(55, 55, 55);
		background-color: rgb(247, 215, 87);
	}
	/* :global(.light) .contacto {
		background-color: #96cdee;
	} */
</style>
